<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        <!-- cfg hibernate mapping -->
        <hibernate-mapping>
        	<class name="com.ps.entity.BankAccount" table="BANKACCOUNT" where="STATUS NOT IN('closed','blocked')">
        		<id name="acno" type="int"/>
        		<property name="holderName" type="string" length="20"/>
        		<property name="balance" type="float"/>
        		<property name="status" type="string" length="20"/>
        		
        		<sql-delete>UPDATE BANKACCOUNT SET STATUS='closed' WHERE ACNO=?</sql-delete>
        	</class>
        </hibernate-mapping>