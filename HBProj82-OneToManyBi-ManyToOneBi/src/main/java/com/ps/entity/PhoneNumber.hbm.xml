<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        <hibernate-mapping package="com.ps.entity">
        	<class name="PhoneNumber" table="PHONENUMBER_BI">
        		<id name="regNo" type="int">
        			<generator class="sequence"/>
        		</id>
        		<property name="phone" type="long"/>
        		<property name="type" type="string" length="10"/>
        		<property name="provider" type="string" length="10"/>
        		<many-to-one name="user" class="com.ps.entity.UserInfo" column="USER_ID" cascade="all" lazy="proxy"/>
        	</class>
        </hibernate-mapping>