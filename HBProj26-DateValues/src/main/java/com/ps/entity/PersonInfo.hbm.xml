<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping>
		<class name="com.ps.entity.PersonInfo" table="PERSON_INFO">
			<id name="pid" type="int">
				<generator class="sequence"/>
			</id>
			<property name="pname" type="string" length="20"/>
			<property name="paddrs" type="string" length="20"/>
			<property name="dob" type="timestamp"/>
			<property name="dom" type="date"/>
			<property name="doj" type="timestamp"/>
		</class>
	</hibernate-mapping>